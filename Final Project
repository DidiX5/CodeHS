import os

#Lock Screen
def lock_screen():
    print("""
 -------------------   
|Sign-in:           |
|       Admin       | |----|
|       Guest       | | () |
|                   | | () |
 -------------------  | () |
         ||           | __ |
     ----------       |----|""")

    sign_in = input("Username: ")
    if sign_in == "Admin":
        admin_password = input("Password: ")
        if admin_password == "Spring123!":
            print("Signing in...")
            for i in range(15550000):
                useless = 0
            os.system("clear")
            home_screen()
        else:
            print("The password is incorrect. Try again.")
            for i in range(15550000):
                useless = 0
            os.system("clear")
            lock_screen()
    elif sign_in == "Guest":
        print("Signing in...")
        for i in range(15550000):
            useless = 0
        os.system("clear")
        home_screen()
    else:
        print("Invalid response. Please try again.")
        for i in range(15550000):
            useless = 0
        os.system("clear")
        lock_screen()

#Home Screen
def home_screen():
    print("""
 -------------------   
|Games:             |
|- Horse Race       | |----|
|- Random Walk      | | () |
|- Slot Machine     | | () |
 -------------------  | () |
         ||           | __ |
     ----------       |----|""")

    while True:
        game_selec = input("Response: ")
        #Shut Down
        if game_selec == "Shut Down":
            os.system("clear")
            print("""
 -------------------   
|                   |
|  Shutting Down... | |----|
|                   | | () |
|                   | | () |
 -------------------  | () |
         ||           | __ |
     ----------       |----|""")
            for i in range(155555555):
                useless = 0
            os.system("clear")
            break
        elif game_selec == "Sign Out":
            os.system("clear")
            print("""
 -------------------   
|                   |
|   Signing Out...  | |----|
|                   | | () |
|                   | | () |
 -------------------  | () |
         ||           | __ |
     ----------       |----|""")
            for i in range(155555555):
                useless = 0
            os.system("clear")
            lock_screen()
            break
        
        #Game Options
        if game_selec == "Horse Race":
            
            print("Launching application...")
            for i in range(15550000):
                useless = 0
            os.system("clear")
            
            print("""
 -------------------   
