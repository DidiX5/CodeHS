         ||           | __ |
     ----------       |----|
""")
            for i in range(155555555):
                useless = 0
            os.system("clear")
            Horse_Race()
            break
        
        elif game_selec == "Slot Machine":
            print("Launching application...")
            for i in range(15550000):
                useless = 0
            os.system("clear")

            print("""
 -------------------   
|                   |
|    SLOT MACHINE   | |----|
|        üé∞          | | () |
|                   | | () |
 -------------------  | () |
         ||           | __ |
     ----------       |----|
""")
            for i in range(155555555):
                useless = 0
            os.system("clear")

            Slot_Machine()
