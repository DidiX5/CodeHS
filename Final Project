import os

#Lock Screen
def lock_screen():
    print(" -------------------")
    print("|SIGN IN:           |")
    print("|       Admin       |  |---|")
    print("|       Guest       |  | 0 |")
    print("|                   |  | 0 |")
    print(" -------------------   | 0 |")
    print("         | |           | _.|")
    print("     -----------       |---|")
    while True:
        account = input("Response2: ")
        if account == "Admin":
            admin_password = input("Enter password: ")
            if admin_password == "Spring123!":
                print("Logging in...")
                for i in range(15500000):
                    useless = 0
                os.system('clear')
                home_screen()
            else:
                print("Wrong Password!")
                for i in range(15500000):
                    useless = 0
                os.system('clear')
                lock_screen()
        elif account == "Guest":
            print("Logging in...")
            for i in range(15500000):
                useless = 0
            os.system('clear')
            home_screen()
        else:
            print("")
            print("Error: Enter Valid Response!")
            print("")
            for i in range(15500000):
                useless = 0
            os.system('clear')
            lock_screen()
    
#Home Screen
def home_screen():
    print(" -------------------")
    print("|GAMES LIST:        |")
    print("|- Horse Race       |  |---|")
    print("|- Slot Machine     |  | 0 |")
    print("|- Random Walk      |  | 0 |")
    print(" -------------------   | 0 |")
    print("         | |           | _.|")
    print("     -----------       |---|")
    game_selection()
    
#Game Selection
def game_selection():
    while True:
        game_selec = input("Response7: ")
        if game_selec == "Horse Race":
            print("Launching Application...")
            for i in range(15500000):
                useless = 0
            os.system('clear')
            Horse_Race_Rules()
            break
        elif game_selec == "Slot Machine":
            print("Launching Application...")
            for i in range(15500000):
                useless = 0
            os.system('clear')
            Slot_Machine_Rules()
            break
        elif game_selec == "Random Walk":
            print("Launching Application...")
            for i in range(15500000):
                useless = 0
            os.system('clear')
            Random_Walk_Rules()
            break
        elif game_selec == "Shut Down":
            os.system('clear')
            print(" -------------------")
            print("|                   |")
            print("|  Shutting Down... |  |---|")
            print("|                   |  | 0 |")
            print("|                   |  | 0 |")
            print(" -------------------   | 0 |")
            print("         | |           | _.|")
            print("     -----------       |---|")
            for i in range(15500000):
                useless = 0
            os.system('clear')
            break
        else:
            print("")
            print("Error: Enter Valid Response!")
            print("")
            for i in range(15500000):
                useless = 0
            os.system('clear')
            home_screen()

#Game 1 - Horse Race(20)
def Horse_Race_Rules():
    print("""HORSE RACE!

Rules:
    - You roll a die with 100 sides
    - If the number is greater than 50, your horse moves forward by 1
    - If the number is less than 50, nothing happens and it is the next players turn
    - The player who reaches the end of the track wins!
    - Up to 4 players can play the game
    
    - SPECIAl: If you roll a 69 you win üòÅ
    
Enter [A] to begin...
Enter [B] to go back...
    """)
    while True:
        response = input("Response9: ")
        if response == "A":
            print("")
            print("Horse Race Loading...")
            for i in range(15500000):
                useless = 0
            os.system('clear')
            Horse_Race_Game()
            break
        elif response == "B":
            print("")
            print("Exiting Application...")
            for i in range(15500000):
                useless = 0
            os.system('clear')
            home_screen()
            game_selection()
            break
        else:
            print("")
            print("Error: Enter Valid Response!")
            print("")
            for i in range(15500000):
                useless = 0
            os.system('clear')
            Horse_Race_Rules()

def Horse_Race_Game():
    print("game[1]")

